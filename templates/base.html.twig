    <style>
    /* index STYLE */

/* Reset some default styles */


/* Apply a luxury background color */
body {
  background-color: #f8f8f8;
}



/* Style the product card container */
.product-card {
  background-color: #fff;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
  padding: 20px;
  margin: 20px;
  border-radius: 10px;
}

/* Style the product image */
.product-image-container {
  text-align: center;
}

.product-image {
  max-width: 100%;
  height: auto;
  border-radius: 10px;
  transition: transform 0.3s ease-in-out;
}

.product-image:hover {
  transform: scale(1.05);
}

/* Style the product details table */
.product-table {
  width: 100%;
  margin-top: 20px;
  font-size: 16px;
}

.product-table th {
  text-align: left;
  font-weight: bold;
}

.product-table td {
  padding: 8px 0;
}

/* Style the price with a luxury color */
.product-price {
  color: #ffcc00;
  font-size: 20px;
  font-weight: 600;
}

/* Style the status badge */
.product-status {
  padding: 8px 16px;
  border-radius: 20px;
  background-color: #007bff;
  color: #fff;
  font-weight: bold;
  text-transform: uppercase;
}

/* Style the action buttons */
.product-edit-button,
.product-back-button,
.product-add-to-cart-button {
  margin-top: 20px;
  padding: 7px 20px;
  border-radius: 20px;
  font-size: 18px;
  font-weight: bold;
}

.product-show-button {
  background-color: #079cff;
  /* Yellow */
  color: #333;
}
.product-edit-button {
  background-color: #ffc107;
  /* Yellow */
  color: #333;
}

.product-back-button {
  background-color: #333;
  color: #fff;
}

.product-add-to-cart-button {
  /* background-color: #ffcc00; */
  /* Luxury Gold */
  color: #000;
  transition: 0.3s;
}

.product-add-to-cart-button:hover {
  /* transform: scale(1.02); */
  background-color: #ffd500;
}
